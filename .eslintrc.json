{
	"overrides": [
		{
			"files": ["*.ts", "*.tsx"],
			"parserOptions": {
				"project": ["tsconfig.json"]
			},
			"extends": ["next/core-web-vitals", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
			"overrides": [
				{
					"files": ["cypress/**/*.ts"],
					"parserOptions": {
						"project": ["cypress/tsconfig.json"]
					},
					"extends": ["plugin:cypress/recommended"]
				}
			]
		}
	]
}

